                <!--                   VerticalAlignment="Top" -->
                <!--                   CanUserAddRows="True" -->
                <!--                   CanUserDeleteRows="True" -->
                <!--                   CanUserSortColumns="False" -->
                <!--                   CanUserReorderColumns="False" -->
                <!--                   ItemsSource="{Binding GmcConfiguration.IniOverridesSystemPack}"> -->
