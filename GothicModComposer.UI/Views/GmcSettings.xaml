                <!--                 <DataGridTextColumn Binding="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="Black" Width="*" Header="Value" IsReadOnly="false" /> -->
                <!--             </DataGrid.Columns> -->
                <!--         </DataGrid> -->
                <!--     </StackPanel> -->
                <!-- </GroupBox> -->
            </Grid>
        </TabItem>
        <!-- <TabItem Header="Build mod">
        </TabItem>-->
    </TabControl>
</Window>