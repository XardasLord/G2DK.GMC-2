<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:GothicModComposer.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:GothicModComposer.UI.Converters"
        xmlns:helpers="clr-namespace:GothicModComposer.UI.Helpers"
        xmlns:local="clr-namespace:GothicModComposer.UI.Views" x:Class="GothicModComposer.UI.Views.GmcSettings"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type={x:Type viewModels:GmcSettingsVM}}"
        Title="GMC Settings" Height="450" Width="800">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="VisibilityConverter" True="Collapsed" False="Visible" />
        <helpers:DynamicDataTemplateSelector x:Key="DynamicDataTemplateSelector" />
    </Window.Resources>

    <TabControl Margin="0,0,0,0">
        <TabItem Header="Main">

            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Gothic II root path:" />
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                    <TextBox x:Name="gothicRoot" Height="25" Width="350"
                             Text="{Binding GmcConfiguration.Gothic2RootPath}" IsReadOnly="True"
                             MouseDoubleClick="gothicRoot_MouseDoubleClick" MouseLeave="gothicRoot_MouseLeave" />
                    <Button Margin="5,0,0,0" Height="25" Width="32" Content="..."
                            Command="{Binding SelectGothic2RootDirectory}" />
                </StackPanel>

                <Label Grid.Row="1" Grid.Column="0" Content="Modification root path:" />
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                    <TextBox x:Name="gothicModRoot" Height="25" Width="350"
                             Text="{Binding GmcConfiguration.ModificationRootPath}" IsReadOnly="True"
                             MouseDoubleClick="gothicModRoot_MouseDoubleClick" MouseLeave="gothicModRoot_MouseLeave" />
                    <Button Margin="5,0,0,0" Height="25" Width="32" Content="..."
                            Command="{Binding SelectModificationRootDirectory}" />
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal">
                    <Button Command="{Binding OpenGameDirectory}" Content="Open Gothic II directory" Margin="5,0,0,0"
                            Width="150" Height="25" />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal">
                    <Button Command="{Binding OpenModDirectory}" Content="Open mod directory" Margin="5,0,0,0"
                            Width="150" Height="25" />
                </StackPanel>
                <Separator Margin="0,10,0,10" Grid.Row="2" Grid.ColumnSpan="3"/>
                <StackPanel Grid.Row="3" Grid.Column="2" Margin="5, 10, 0, 0" HorizontalAlignment="Left">
                    <Button Width="150" Height="32"
                            Content="Open Logs directory"
                            Command="{Binding OpenLogsDirectory}"
                            IsEnabled="{Binding IsLogDirectoryAvailable}" />
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="2" Margin="5, 10, 0, 0" HorizontalAlignment="Left">
                    <Button Width="150" Height="32"
                            Content="Clear logs directory"
                            Command="{Binding ClearLogsDirectory}"
                            IsEnabled="{Binding IsLogDirectoryAvailable}" />
                </StackPanel>

                <StackPanel Grid.Row="5" Grid.Column="2" Margin="5, 10, 0, 0" HorizontalAlignment="Left">
                    <Button x:Name="modBuildBtn" Width="150" Height="32"
                            Content="Open mod build directory"
                            Command="{Binding OpenModBuildDirectory}" />
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="0" Margin="0, 5, 0, 0" HorizontalAlignment="Left" Grid.ColumnSpan="2" Width="203">
                    <CheckBox IsChecked="{Binding GmcConfiguration.CloseAfterFinish}"
                              Content="Auto close console after finish" />
                    <CheckBox Margin="0, 5, 0, 0" Unchecked="WindowsStartup_Unchecked" Checked="WindowsStartup_Checked"
                              IsChecked="{Binding GmcConfiguration.StartWithWindows}"
                              Content="Start with Windows" />
                </StackPanel>
                <local:BaloonPopup x:Name="Pop" Grid.Column="1" HorizontalAlignment="Left" Margin="316,-29,0,0" VerticalAlignment="Top" />
                <local:BaloonPopup x:Name="Pop2" Grid.Column="1" HorizontalAlignment="Left" Margin="316,3,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
            </Grid>
        </TabItem>

        <TabItem Header="Ini">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="400" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <GroupBox Header="Overrides" Grid.Row="0" Grid.Column="0" Margin="0,15,0,0"
                          HorizontalAlignment="Center">
                    <StackPanel>
                        <DataGrid AutoGenerateColumns="False"
                                  Height="250"
                                  Width="750"
                                  HorizontalAlignment="Left"
                                  x:Name="OverridesIniTable"
                                  VerticalAlignment="Top"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserSortColumns="False"
                                  CanUserReorderColumns="False"
                                  AlternatingRowBackground="LightGray"
                                  ItemsSource="{Binding GmcConfiguration.IniOverrides}">

                            <DataGrid.Resources>
                                <DataTemplate x:Key="TextBoxTemplate">
                                    <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                                <DataTemplate x:Key="CheckBoxTemplate">
                                    <CheckBox
                                        IsChecked="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                                <DataTemplate x:Key="ComboBoxTemplate">
                                    <ComboBox
                                        SelectedItem="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        ItemsSource="{Binding AvailableValues}" />
                                </DataTemplate>
                            </DataGrid.Resources>

                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Binding="{Binding Section, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Foreground="Black" Width="*" Header="Section" IsReadOnly="True" />
                                <DataGridTextColumn
                                    Binding="{Binding Key, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Foreground="Black" Width="*" Header="Key" IsReadOnly="True">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="ToolTip" Value="[Placeholder]" />
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Value"
                                                        CellTemplateSelector="{StaticResource DynamicDataTemplateSelector}" />
                            </DataGrid.Columns>

                            <DataGrid.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.ContainerStyle>
                                        <Style TargetType="{x:Type GroupItem}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                                        <StackPanel>
                                                            <StackPanel Orientation="Horizontal"
                                                                        Background="LightYellow">
                                                                <TextBlock Text="{Binding Name}" />
                                                                <TextBlock
                                                                    Text="{Binding ItemCount, StringFormat=Count: \{0\}}"
                                                                    Margin="30,0,0,0" />
                                                            </StackPanel>
                                                            <ItemsPresenter />
                                                        </StackPanel>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </GroupStyle.ContainerStyle>
                                </GroupStyle>
                            </DataGrid.GroupStyle>
                        </DataGrid>

                        <Button Width="200" Height="32"
                                Margin="0,15,0,0"
                                HorizontalAlignment="Left"
                                Content="Restore default settings"
                                Command="{Binding RestoreDefaultIniOverrides}" />
                    </StackPanel>
                </GroupBox>

