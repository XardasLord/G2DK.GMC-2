<Window x:Class="GothicModComposer.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:GothicModComposer.UI.ViewModels.ViewModels;assembly=GothicModComposer.UI.ViewModels"
        mc:Ignorable="d"
        Title="GMC UI" Height="450" Width="800">
    <Window.DataContext>
        <viewModels:GmcVM />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Menu Foreground="Black">
                <MenuItem Header="File" IsEnabled="False" />
                <MenuItem Header="Settings" IsEnabled="False" />
                <MenuItem Header="Help" IsEnabled="False" />
            </Menu>
        </Grid>

        <StackPanel Grid.Row="1">
            <Label Content="Available profiles:" FontWeight="Bold" FontSize="25"/>
            <Button Content="Run mod" Margin="0 15 0 0" Height="30" Command="{Binding RunModProfile}" />
            <Button Content="Update" Margin="0 15 0 0" Height="30" Command="{Binding RunUpdateProfile}" />
            <Button Content="Compose" Margin="0 15 0 0" Height="30" Command="{Binding RunComposeProfile}" />
            <Button Content="Build mod file" Margin="0 15 0 0" Height="30" Command="{Binding RunBuildModFileProfile}" />
            <Button Content="Restore Gothic" Margin="0 15 0 0" Height="30" Command="{Binding RunRestoreGothicProfile}" />
            <Button Content="Enable VDF" Margin="0 15 0 0" Height="30" Command="{Binding RunEnableVDFProfile}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10,0,0,0">
            <!-- Footer in the future -->
        </StackPanel>
    </Grid>
</Window>
