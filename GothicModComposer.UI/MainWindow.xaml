<Window x:Class="GothicModComposer.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:GothicModComposer.UI.ViewModels"
        Title="GMC UI" Height="450" Width="800"
        >

    <Window.DataContext>
        <viewModels:GmcVM />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Menu Foreground="Black">
                <MenuItem Header="File" IsEnabled="False" />
                <MenuItem Header="Settings" Command="{Binding OpenSettings}" />
                <MenuItem Header="Help" IsEnabled="False" />
            </Menu>
        </Grid>

        <StackPanel Grid.Row="1" HorizontalAlignment="Left" Margin="580,0,0,0" Width="220">
            <Label Content="" FontWeight="Bold" FontSize="25"/>
            <Button Content="Run mod" Margin="0 15 0 0" Height="30" Command="{Binding RunModProfile}" Width="130" />
            <Button Content="Update" Margin="0 15 0 0" Height="30" Command="{Binding RunUpdateProfile}" Width="130" />
            <Button Content="Compose" Margin="0 15 0 0" Height="30" Command="{Binding RunComposeProfile}" Width="130" />
            <Button Content="Build mod file" Margin="0 15 0 0" Height="30" Command="{Binding RunBuildModFileProfile}" Width="130" />
            <Button Content="Restore Gothic" Margin="0 15 0 0" Height="30" Command="{Binding RunRestoreGothicProfile}" Width="130" />
            <Button Content="Enable VDF" Margin="0 15 0 0" Height="30" Command="{Binding RunEnableVDFProfile}" Width="130" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10,0,0,0">
            <!-- Footer in the future -->
        </StackPanel>
        <Label Grid.Column="0" Content="3D World:" Margin="0,23,441,327" Grid.Row="1" HorizontalAlignment="Right" Width="349" />
        <ComboBox Grid.Row="1" 
            HorizontalAlignment="Left"
            Width="349"
            IsEditable="False"
            ItemsSource="{Binding Zen3DWorlds}"
            SelectedValue="{Binding GmcConfiguration.DefaultWorld, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,63,0,269">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <ListView Grid.Row="1" Margin="10,112,0,10" HorizontalAlignment="Left" Width="349"
         ItemsSource="{Binding Zen3DWorlds}"
            SelectedValue="{Binding GmcConfiguration.DefaultWorld, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Grid.Row="1" Grid.Column="0" Content="Gothic arguments:" Margin="377,67,291,212" />
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="377,98,225,10">
            <CheckBox IsChecked="{Binding GmcConfiguration.GothicArguments.IsWindowMode}" Content="Window mode"/>
            <CheckBox IsChecked="{Binding GmcConfiguration.GothicArguments.IsDevMode}" Content="Dev mode"/>
            <CheckBox IsChecked="{Binding GmcConfiguration.GothicArguments.IsMusicDisabled}" Content="Disable music"/>
            <CheckBox IsChecked="{Binding GmcConfiguration.GothicArguments.IsSoundDisabled}" Content="Disable sound"/>
            <CheckBox IsChecked="{Binding GmcConfiguration.GothicArguments.IsReparseScript}" Content="Reparse scripts"/>
            <ComboBox ItemsSource="{Binding GmcConfiguration.AvailableResolutions}"
                SelectedItem="{Binding GmcConfiguration.GothicArguments.Resolution, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Width="178"/>
        </StackPanel>
    </Grid>
</Window>
